{
    "name": "@bspk/styles",
    "version": "1.0.1",
    "scripts": {
        "lint": "stylelint \"*.css\" && prettier --write .",
        "build:plugin": "cd figma-plugin && npm run build",
        "build": "ts-node .scripts/build.ts && tsc",
        "build:local": "ts-node .scripts/build.ts -local && tsc",
        "dev": "nodemon .scripts/build.ts --watch .scripts/build.ts",
        "semantic-release": "semantic-release",
        "pack": "rm -rf ./package && npm run build && npm pack",
        "clean": "rm -rf data style ./*.js ./*.d.ts ./*.js.map ./*.ts",
        "pack:dev": "npm run pack && tar -xvf ./bspk-styles-*.tgz"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=20"
    },
    "license": "CC-BY-4.0",
    "devDependencies": {
        "@figma/plugin-typings": "*",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/github": "^11.0.2",
        "@semantic-release/npm": "^12.0.1",
        "@types/node": "^22.7.9",
        "nodemon": "^3.1.7",
        "prettier": "^3.5.3",
        "prettier-plugin-jsdoc": "^1.3.2",
        "stylelint": "^16.9.0",
        "stylelint-config-standard": "^36.0.1",
        "ts-node": "^10.9.2"
    }
}
